  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch in Browser",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/bin/www",
      "serverReadyAction": {
        "pattern": "Listening on port ([0-9]+)",
        "uriFormat": "http://localhost:%s/api/v1/users",
        "action": "openExternally"
      }
    }
  ]
}